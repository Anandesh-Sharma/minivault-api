# MiniVault API Advanced Configuration

# Model Configuration
# Options: "stubbed" or "transformers"
MODEL_TYPE=stubbed

# Hugging Face Model Configuration (only used when MODEL_TYPE=transformers)
# Recommended lightweight models:
# - distilgpt2 (82M parameters, fastest)
# - gpt2 (117M parameters, balanced)
# - microsoft/DialoGPT-small (117M parameters, conversation-optimized)
HF_MODEL_NAME=distilgpt2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
DEBUG_MODE=true

# Performance Settings
MAX_MEMORY_MB=2048
ENABLE_MODEL_CACHING=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_PERFORMANCE_LOGGING=true 